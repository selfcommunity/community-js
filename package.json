{
  "name": "@selfcommunity/community-js",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap --use-workspaces && yarn install-peers",
    "install-peers": "install-peers -f",
    "build:essentials": "lerna run build --scope @selfcommunity/utils && lerna run build --scope @selfcommunity/types && lerna run build --scope @selfcommunity/api-services ",
    "build": "yarn run build:essentials && lerna run build --ignore @selfcommunity/utils --ignore @selfcommunity/types --ignore @selfcommunity/api-services",
    "prerelease": "lerna publish --conventional-commits --conventional-prerelease --yes",
    "release": "lerna publish --conventional-commits --conventional-graduate --yes",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "tdd": "npm run rw tdd",
    "clean:node_modules": "lerna exec yarn clean:node_modules && rimraf node_modules",
    "clean:libs": "lerna exec yarn clean:lib",
    "storybook": "start-storybook -p 6006",
    "storybook-https": "node ./scripts/devcert/generate;start-storybook -p 6006 --https --ssl-cert=./certs/tls.cert --ssl-key=./certs/tls.key",
    "build-storybook": "build-storybook"
  },
  "author": "SelfCommunity (https://www.selfcommunity.com)",
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-proposal-export-namespace-from": "^7.5.2",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/plugin-transform-modules-commonjs": "^7.7.4",
    "@babel/preset-flow": "^7.14.5",
    "@babel/preset-modules": "^0.1.1",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@storybook/addon-backgrounds": "^6.5.13",
    "@storybook/addon-docs": "^6.5.13",
    "@storybook/addon-essentials": "^6.5.13",
    "@storybook/addon-links": "^6.5.13",
    "@storybook/addon-toolbars": "^6.5.13",
    "@storybook/builder-webpack5": "^6.5.13",
    "@storybook/manager-webpack5": "^6.5.13",
    "@storybook/react": "^6.5.13",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "babel-eslint": "10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-macros": "^3.1.0",
    "babel-preset-env-modules": "^1.0.0",
    "cross-env": "^5.0.5",
    "devcert": "1.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-storybook": "^0.6.7",
    "glob": "^7.1.3",
    "install-peers-cli": "^2.2.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.11",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "emotion-theming": "^11.0.0",
    "notistack": "^2.0.8",
    "pubsub-js": "^1.9.4",
    "react-custom-scrollbars": "^4.2.1",
    "react-infinite-scroll-component": "^6.1.0",
    "react-lazyload": "^3.2.0",
    "seamless-scroll-polyfill": "^2.1.8",
    "use-deep-compare-effect": "^1.8.1",
    "validate-color": "^2.2.4"
  },
  "peerDependencies": {
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "@mui/material": "^5.11.12",
    "react": "^17.0.2 || 18",
    "react-dom": "17 || 18",
    "react-intl": "^5.25.0"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "semi": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/selfcommunity/community-js"
  }
}
